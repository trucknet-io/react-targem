{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["../node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@lib": ["../src"],
      "@lib/*": ["../src/*"]
    },
    "isolatedModules": true
  },
  "include": ["../src/**/*", "./src/**/*", "../__utils__/**/*"]
}
